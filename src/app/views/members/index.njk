{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    
    <div class="header">
        <a class="button" href="/members/create">Novo Membro</a>
        <form action="/members" method="GET">
            <input
                type="text"
                name="filter"
                placeholder="Nome ou Email"
                value={{filter}}
            >
            <button type="submit">Filtrar</button>
        </form>
    </div>

    <table width="100%">
        <thead>
            <tr>
                <th>Nome</th>
                <th class="mobile-responsive">Email</th>
                <th class="mobile-responsive">Peso</th>
                <th class="mobile-responsive">Altura</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
            <tr>
                <td>
                    <span style="background-image: url({{ member.avatar_url }})"></span>
                    {{ member.name }}</td>
                <td class="mobile-responsive"> {{ member.email }}</td>
                <td class="mobile-responsive"> {{ member.weight }}kg</td>
                <td class="mobile-responsive"> {{ member.height }}cm</td>

                <td><a href="/members/{{ member.id }}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    ></div>

</div>

{% endblock content %}
